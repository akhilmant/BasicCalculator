<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BasicCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/actual_grey</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Customize your theme here. -->
    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/white</item>
    </style>
    <style name="Button.GreyishWhite" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/greyish_white</item>
    </style>
    <style name="Button.Black" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/black</item>
    </style>
    <style name="Button.Yellow" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/yellow</item>
    </style>
    <style name="Button.ActualGrey" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/actual_grey</item>
    </style>
</resources>